<h1> Attraction <%=@attraction.name%></h1>
<div class="jumbotron"><b>
Name: <%=@attraction.name%>
<br>
Ticket Requiremens:<%=@attraction.tickets%>
<br>
Height Requirements:<%=@attraction.min_height%>
<br>
Nausea Rating: <%=@attraction.nausea_rating%>
<br>
Happiness Rating:<%=@attraction.happiness_rating%>
<br>
<% if !@user.admin %>
   <%= form_for @ride do |f| %>
    <%= f.hidden_field :user_id, :value => @user.id %>
    <%= f.hidden_field :attraction_id, :value => @attraction.id %>
    <%= f.button "Go on this ride" %>
  <% end %>
<% else %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>
</div>
