
<%= form_for  @attraction do |f| %>

    <label>Name</label><br>
    <%= f.text_field :name%>
    <br>

    <label>Height Requirement(in inch)</label><br>
    <%= f.text_field :height%>
    <br>

    <label>How fun is it?(1-5 scale)</label><br>
    <%= f.text_field :happiness%>
    <br>

    <label>How nausea-inducing is it?(1-5 scale)</label><br>
    <%= f.text_field :nausea%>
    <br>

    <label>How many tickets does it cost?</label><br>
    <%= f.text_field :tickets%>
    <br>

    <%= f.submit "Create Attraction"%>
<% end %>
