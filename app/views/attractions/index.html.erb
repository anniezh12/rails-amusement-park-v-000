<h1>Wecome to the Amusement Park!</h1>
<h3>Listing attractions</h3>
<table class="table table-bordered">

  <thead>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th> Tickets</th>
    <th>Min Height</th>
    <th>Details</th>
    </tr>
</thead>
<tbody>
<% @attractions.each do |a| %>
<tr>
  <td></td>
  <td><%= a.name%></td>
    <td><%= a.tickets%></td>
    <td><%= a.min_height%></td>
    <% if @user.admin %>
    <td><%= link_to "Show #{a.name}", attraction_path(a)%></button></td>
    <% else %>
      <td><%= link_to "Go on #{a.name}",attraction_path(a) %></td>
      <% end %>
</tr>
<% end %>
</tbody>
</table>
<% if @user.admin %>
<%= link_to "New Attraction", new_attraction_path%>
<% end %>
